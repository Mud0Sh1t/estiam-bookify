{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}

    {{ form_row(form.search) }}

    <div class="row">
        <div class="col 6">
            {{ form_row(form.authorFilter) }}
        </div>
        <div class="col 6">
            {{ form_row(form.titleFilter) }}
        </div>
        <div class="col 4">
            {{ form_row(form.cityFilter) }}
        </div>
    </div>

    {{ form_row(form.minPrice) }}

    {{ form_row(form.maxPrice) }}

    <button class="btn waves-effect waves-light" type="submit" name="action">
        Submit
    </button>

    {{ form_end(form) }}
{% endblock %}
