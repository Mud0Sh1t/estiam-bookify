{% extends 'base.html.twig' %}

{% block body %}
    <h2>Mes annonces : </h2>
    <div class="row">
        {% for annonce in annonces %}
            <div class="col s12 m4">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{ annonce.title }}</span>
                        <p>{{ annonce.description }}</p>
                    </div>
                    <div class="card-action">
                        <div class="row">
                            <a href="{{ path('annonce_view', {'id': annonce.id}) }}" class="col 12">Voir l'annonce</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
